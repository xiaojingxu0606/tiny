.content
  position: absolute;
  width: 100%;
  top: 50px;
  left: 0;
  padding: 30px;
  box-sizing: border-box;
  ol
    padding-left: 0;
  li
    cursor: pointer;
    height: 40px;
    line-height: 40px;
    font-size: 16px;
    position: relative;
    list-style-type: none;
    border-radius: 4px;
    p
      padding-left: 40px;
    input
      position: absolute;
      top: 0;
      left: 0;
      width: 20px;
      height: 20px;
      margin-top: 10px;
  .list-complete
    text-decoration: line-through;
    background-color: alpha(#CCC, .4);
  .content-add
    width: 100%;
    height: 30px;
    line-height: 30px;
    font-size: 15px;
    border-radius: 5px;
    border:1px solid #CCC;
    padding-left: 5px;
  .delete
    width: 30px;
    height: 30px;
    position: absolute;
    right: 0;
    top: 5px;
    border-radius: 100%;
    background-color: #BDBDBD;